{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "aimthing",
  "version": "0.1.0",
  "identifier": "me.lukiiy.aimthing",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Aimthing",
        "width": 1280,
        "height": 720,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "linux": {
    	"appimage": {
    		"bundleMediaFramework": true
    	}
    },
    "icon": [
      "icons/32.png",
      "icons/32.icns",
      "icons/96.png",
      "icons/300.png",
      "icons/300.ico"
    ]
  }
}
